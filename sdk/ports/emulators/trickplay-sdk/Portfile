# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem		1.0


categories		emulators
name			trickplay-sdk
version			0.0.4
platforms		darwin

maintainers		trickplay.com:craig
homepage		http://developer.trickplay.com/sdk/

description		Television platform emulator for the TrickPlay engine
long_description	TrickPlay is an application platform for televisions.  This package provides a computer-based emulator for the engine running on a TV.


fetch.type		git
git.url			git@git.assembla.com:trickplay.git
git.branch		origin/stable

depends_lib		\
				port:tokyocabinet \
				port:sqlite3 \
				port:clutter-gst \
				port:gst-plugins-good \
				port:gst-plugins-bad \
				port:openssl \
				port:curl \
				port:glib2 \
				port:avahi \
				port:libpng \
				port:tiff \
				port:jpeg \
				port:json-glib \
				port:fontconfig \
				port:expat

use_configure		no

pre-build {
	mkdir ${worksrcpath}/build
	cd ${worksrcpath}/build
	cmake ..
}

build {
	cd ${worksrcpath}/build
	make
}

test {}

destroot {
	xinstall -m 755 -d ${destroot}${prefix}/bin
	xinstall -m 755 ${worksrcpath}/build/client/clutter-mediaplayer/trickplay ${destroot}${prefix}/bin
}
