
TOOLCHAIN_ROOT=/opt/toolchains/arm-2009q3

ARCH="arm"
GLES="2.0"
#GLIB_ICONV="--with-libiconv"
GLIB_ICONV=""

PREFIX=${PWD}/output
HOST=arm-none-linux-gnueabi
BUILD=i686-pc-linux-gnu

CC=${HOST}-gcc
CXX=${HOST}-g++
AR=${HOST}-ar
STRIP=${HOST}-strip
NM=${HOST}-nm
LD=${HOST}-ld
RANLIB=${HOST}-ranlib

CFLAGS="-I${PREFIX}/include -fPIC -O2"
CPPFLAGS=${CFLAGS}
CXXFLAGS=${CFLAGS}
LDFLAGS="-L${PREFIX}/lib -Wl,-rpath-link,${PREFIX}/lib"
LIBS="-ldl"

PKG_CONFIG_LIBDIR=${PREFIX}/lib/pkgconfig

export PREFIX HOST BUILD
export CC CXX AR STRIP NM LD RANLIB 
export CFLAGS CPPFLAGS CXXFLAGS LDFLAGS LIBS 
export PKG_CONFIG_LIBDIR
export PATH=${TOOLCHAIN_ROOT}/bin:${PATH}


