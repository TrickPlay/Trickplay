
TOOLCHAIN_ROOT=/opt/toolchains/arm-linux-androideabi-4.4.3

ARCH="arm-eabi"
GLES="2.0"
#GLIB_ICONV="--with-libiconv"
GLIB_ICONV=""

PREFIX=${PWD}/output
HOST=arm-linux-androideabi
# Get BUILD by asking native gcc what it targets...
BUILD=`gcc -v 2>&1 | grep Target: | cut -d' ' -f2`

CC=${HOST}-gcc
CXX=${HOST}-g++
AR=${HOST}-ar
STRIP=${HOST}-strip
NM=${HOST}-nm
LD=${HOST}-ld
RANLIB=${HOST}-ranlib

CFLAGS="-I${PREFIX}/include -fPIC -Os"
CPPFLAGS=${CFLAGS}
CXXFLAGS=${CFLAGS}
LDFLAGS="-L${PREFIX}/lib -Wl,-rpath-link,${PREFIX}/lib"
LIBS="-lstdc++ -lc -lm -llog -ldl -landroid -lEGL -lGLESv2"

PKG_CONFIG_LIBDIR=${PREFIX}/lib/pkgconfig

export PREFIX HOST BUILD
export CC CXX AR STRIP NM LD RANLIB
export CFLAGS CPPFLAGS CXXFLAGS LDFLAGS LIBS
export PKG_CONFIG_LIBDIR
export PATH=${TOOLCHAIN_ROOT}/bin:${PATH}


