[[
#include "context.h"

#define ctx (TPContext::get_from_lua(L))
]]

global app [[void*]]
{
    app();
    
    readonly string id
        [[id=ctx->get(APP_ID);]];
        
    readonly string name
        [[name=ctx->get(APP_NAME);]];
        
    readonly string author
        [[author=ctx->get(APP_AUTHOR);]];
        
    readonly string description
        [[description=ctx->get(APP_DESCRIPTION);]];
    
    readonly string copyright
        [[copyright=ctx->get(APP_COPYRIGHT);]];
}