#include "clutter_util.h"
#include "spritesheet.h"
#include "sprite_sheet.lb.h"
#include <glib.h>
]]

[[

struct SpriteData
{
    SpriteData( ClutterTexture * _texture ) : ref( LUA_REFNIL ), stop_updates( false ), texture( _texture ), sprite( NULL ), sheet( NULL ), id( NULL ) {}
    
    ~SpriteData()
    {
        if ( id ) free( id );
    }
    
    const char * get_id() { return strdup( id ); }
    
    void set_id( const char * new_id )
    {
        g_message( "set id" );
        if ( !id || !new_id || strcmp( id, new_id ) )
        {
            if ( id ) free( id );
            id = new_id ? strdup( new_id ) : NULL;
            
            update_sprite();
        }
        g_message( "finished set id" );
    }
    
    void set_sheet( SpriteSheet * _sheet )
    {
        sheet = _sheet;
        update_sprite();
    };
    
    void update()
    {
        g_message( "update sprite" );
        static CoglHandle null_texture = cogl_texture_new_with_size( 1, 1, COGL_TEXTURE_NONE, COGL_PIXEL_FORMAT_A_8 );
        
        if ( !stop_updates )
        {
            clutter_texture_set_cogl_texture( texture, sprite ? sprite->get_texture() : null_texture );
            clutter_actor_queue_redraw( CLUTTER_ACTOR( texture ) );
            
            if ( sprite )
            {
                int tw = 0, th = 0;
                sprite->get_dimensions( & tw, & th );
                g_message( "sprite size is %i %i", tw, th);
            }
        }
    }
    
    int ref;
    int stop_updates;
    
private:
    static void on_ping( PushTexture * source, void * target ) { ((SpriteData *) target)->update(); };

    void update_sprite()
    {
        if ( sheet )
        {
            sprite = sheet->get_sprite( id );
        }
        else
        {
            sprite = NULL;
            g_warning( "Trying to set the id '%s' on a Sprite without first specifying a SpriteSheet.", id );
        }
        
        ping.set( sprite, SpriteData::on_ping, this, true );
        update();
    }

    PushTexture::PingMe   ping;
    ClutterTexture      * texture;
    
    SpriteSheet::Sprite * sprite;
    SpriteSheet         * sheet;
    char * id;
};
