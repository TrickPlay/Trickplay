                                        lua_rawseti( L , -2 , i + 1 );
                                    }
                                }
                                break;
                            }

                            case GL_FLOAT:
                            {
                                GLfloat v[16];
                                glGetUniformfv( program , location , v );
                                if ( size == 1 )
