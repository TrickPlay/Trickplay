                                        lua_rawseti( L , -2 , i + 1 );
                                    }
                                }
                                break;
                            }

                            case GL_BOOL:
                            {
                                GLint v[16];
                                glGetUniformiv( program , location , v );
                                if ( size == 1 )
                                {
                                    lua_pushboolean( L , v[0] == GL_TRUE ? true : false );
