uniform float t;
uniform vec2 r;

void main()
{
    vec3 col;
    float l;
    float z=t;

    for(int i=0;i<3;i++)
    {
        vec2 uv;
        vec2 p=gl_FragCoord.xy/r;
        uv=p;
        p-=.5;
        p.x*=r.x/r.y;
        z+=.07;
        l=length(p);
        uv+=p/l*(sin(z)+1.)*abs(sin(l*9.-z*2.));
        col[i]=.01/length(abs(mod(uv,1.)-.5));
    }
    gl_FragColor=vec4(col/l,t);
}
