DEFAULT_FONT="DejaVu Sans Mono 40px"
DEFAULT_COLOR="FFFFFF" --WHITE
FooterView = Class(View, function(view, model, ...)
    view._base.init(view,model)
     
    view.top_ui=Group{name="top_ui", position={10,1000}, opacity=0}

    menu_items = {
        Text{
            position={0, 0},
            font  = DEFAULT_FONT,
            color = DEFAULT_COLOR,
            text = "Pizza"
        },
        Text{
            position={400, 0},
            font  = DEFAULT_FONT,
            color = DEFAULT_COLOR,
            text = "Sandwiches"
        },
        Text{
            position={800, 0},
            font  = DEFAULT_FONT,
            color = DEFAULT_COLOR,
            text = "Bread"
        },
        Text{
            position={1200, 0},
            font  = DEFAULT_FONT,
            color = DEFAULT_COLOR,
            text = "Shlut fo money"
        }
    }
    view.bottom_ui:add(unpack(menu_items))
    screen:add(view.bottom_ui)
    function view:initialize()
        self:set_controller(FooterController(self))
    end

    function view:update()
        local controller = view:get_controller()
        local comp = model:get_active_component()
        if comp == Component.FOOD then
            print("Showing HeaderView UI")
            view.top_ui.opacity = 255
            for i,item in ipairs(menu_items) do
                if i == controller:get_selected_index() then
                    item:animate{duration=1000, mode="EASE_OUT_EXPO", opacity=255}
                else
                    print("opacity to 0")
                    item:animate{duration=1000, mode="EASE_OUT_BOUNCE", opacity=0}
                end
            end
        else
            print("Hiding HeaderView UI")
            view.top_ui.opacity = 0
        end
    end

   end)
